@page
@model IndexModel
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Welcome To Nuruz's Site";
    var user = await UserManager.GetUserAsync(User);
}


<div class="container-fluid" style="background-color: maroon">
    <div class="main-body">
        <div class="row gutters-sm">

            @if (@Model.MyInfos.Count > 0)
            {

                @foreach (var myifo in Model.MyInfos)
                {
                    <div class="col-md-4 mb-lg-5">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <img src="~/images/@myifo.Image" width="330" height="650" class="figure-img">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <h3 style="font-weight:bold"> @myifo.FirstName @myifo.LasttName  </h3>
                                </div>
                            </div>
                        </div>
                        <div class="card mt-3">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 style=" font-weight:bold">PROFILE : </h6>
                                    <hr />
                                    <h6>@myifo.ProfileDiscription</h6>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 style=" font-weight:bold">Language Eficiance : </h6>
                                    <hr />
                                    <h6>@myifo.Languages</h6>
                                </li>
                            </ul>
                        </div>


                    </div>
                    <div class="col-md-6">
                        <div class="card mb-3">
                            <h2 style=" font-weight:bold">Educational Qualifications : </h2>
                            <hr />
                            <div class="card-body">

                                <h4 style=" font-weight:bold">@myifo.School1 </h4>
                                <hr />
                                <h6 style=" font-weight:bold">@myifo.Course1 </h6>
                                <h6 style=" font-weight:bold">@myifo.Course2</h6>

                                <h6 style=" font-weight:bold">@myifo.Course3 </h6>

                                <h6 style=" font-weight:bold">@myifo.Course4 </h6>

                                <h6 style=" font-weight:bold">@myifo.Course5 </h6>

                                <h6 style=" font-weight:bold">@myifo.Course6 </h6>

                                <h6 style=" font-weight:bold">@myifo.Course7 </h6>

                                <h6 style=" font-weight:bold">@myifo.Course8 </h6>

                                <h6 style=" font-weight:bold">@myifo.Course9 </h6>
                                <h6 style=" font-weight:bold">@myifo.Course10 </h6>





                                <br />

                            </div>
                        </div>
                        <div class="card mb-3">

                            <div class="card-body">
                                <h4 style=" font-weight:bold">@myifo.School2 </h4>
                                <hr />

                                <h6 style=" font-weight:bold">@myifo.School2Education </h6>






                                <br />

                            </div>
                        </div>

                        <div class="card mb-3">
                            <h2 style=" font-weight:bold">TECH COMPETENCES : </h2>
                            <hr />

                            <div class="card-body">
                                <h6>@myifo.TecnicalCompitences </h6>








                                <br />

                            </div>
                        </div>

                    </div>
                }
            }
        </div>
    </div>
</div>










